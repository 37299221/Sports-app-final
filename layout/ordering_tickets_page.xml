<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--No functionality here as there isn't much working in the java file.-->
    <!--Plan was to click a button and it would add a ticket to the 'basket'. Only allows one of each ticket-->

    <!--Short sentence stating what to do-->
    <TextView
        android:id="@+id/textforordering"
        android:layout_width="257dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="50px"
        android:layout_marginTop="50px"
        android:gravity="center"
        android:text="Choose one of these options to add onto your ticket:"
        android:textSize="20dp" />

    <!--Button for ordering a football ticket-->
    <Button
        android:id="@+id/football"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="football"
        android:layout_below="@+id/textforordering"
        />

    <!--Button for ordering tennis ticket-->
    <Button
        android:id="@+id/tennis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/football"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="323dp"
        android:text="tennis" />

    <!--Button for ordering table tennis ticket-->
    <Button
        android:id="@+id/tabletennis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tabletennis"
        android:layout_below="@id/tennis"
        />

    <!--Button for ordering other extra addons such as food, drink or a raffle ticket.-->
    <Button
        android:id="@+id/addons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="addons"
        android:layout_below="@id/tabletennis"
        />

    <!--Shows all currently owned tickets here.-->
    <Button
        android:id="@+id/ticket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/addons"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="126dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="275dp"
        android:text="Show ordered tickets" />

    <!--Button below here for clearing 'basket', but no time so doesn't exist.-->

</RelativeLayout>